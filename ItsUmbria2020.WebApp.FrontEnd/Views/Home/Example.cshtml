    <li>
        <h3>Bottoni</h3>
        <p>L'interazioni con il bottone farà apparire un div con effetto slide</p>
        <style type="text/css">
            #elemento, #toggleButton {
                background-color: black;
                color: white;
                font: normal 12px tahoma, arial;
                margin: 0;
                padding: 0;
            }

            #elemento {
                text-align: center;
            }

            #toggleButton {
                padding: 1% 3%;
            }

            .slideup, .slidedown {
                overflow: hidden;
                height: 0;
                transition: height 0.5s;
            }

            .slidedown {
                height: 100px;
            }
        </style>
        <script type="text/javascript">
            function slide() {
                var e = document.getElementById("elemento");
                e.className == "slideup" ? e.className = "slidedown" : e.className = "slideup";
                var tb = $("#toggleButton");
                if (tb.val() == "Mostra") tb.val("Nascondi");
                else tb.val("Mostra");
            }
        </script>

        <input id="toggleButton" type="button" onclick="slide()" value="Mostra" />
        <div id="elemento" class="slideup"><spam>Contenuto che appare</spam></div>

    </li>

    <li>
        <h3>Animazione 3</h3>
        <p>Rotate X</p>
        <div class="rotateX">
            <img src="~/img/chisono.jpg" />
        </div>
        <style>
            .rotateX {
                animation: rotationX 3s infinite alternate;
            }

            @@keyframes rotationX {
                from {
                    transform: rotateX(0deg);
                }

                to {
                    transform: rotateX(359deg);
                }
            }
        </style>
    </li>

    <li>
        <h3>Animazione 4</h3>
        <p>Rotate Y</p>
        <div class="rotateY">
            <img src="~/img/cycle.jpg" />
        </div>
        <style>
            .rotateY {
                animation: rotationY 3s infinite alternate;
                width: 200px;
            }

            @@keyframes rotationY {
                from {
                    transform: rotateY(0deg);
                }

                to {
                    transform: rotateY(359deg);
                }
            }
        </style>
    </li>

    <li>
        <h3>Animazione 5</h3>
        <p>Scale</p>
        <div class="scalate">
            <img src="~/img/chisono.jpg" />
        </div>
        <style>
            .scalate {
                animation: scalation 1s infinite alternate;
            }

            @@keyframes scalation {
                from {
                    transform: scale(1);
                }

                to {
                    transform: scale(1.1);
                }
            }
        </style>
    </li>
    <li>
        <h3>Animazione 6</h3>
        <p>Skew X</p>
        <div class="skewableX">
            <img src="~/img/durolavoro.jpg" />
        </div>
        <style>
            .skewableX {
                animation: skewX 3s infinite;
                transform: skew(20deg);
                animation-direction: alternate;
            }

            @@keyframes skewX {
                0% {
                    transform: skewX(20deg);
                }

                100% {
                    transform: skewX(-20deg);
                }
            }
        </style>
    </li>
    <li>
        <h3>Animazione 7</h3>
        <p>Skew Y</p>
        <div class="skewableY">
            <img src="~/img/home.png" />
        </div>
        <style>
            .skewableY img {
                width: 100%;
            }

            .skewableY {
                width: 500px;
                animation: skewY 3s infinite;
                transform: skew(20deg);
                animation-direction: alternate;
            }

            @@keyframes skewY {
                0% {
                    transform: skewY(20deg);
                }

                100% {
                    transform: skewY(-20deg);
                }
            }
        </style>
    </li>
</ul>